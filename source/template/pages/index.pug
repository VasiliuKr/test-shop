extends ../_template

block variables
	- var title = 'Каталог'

block content
	.breadcrumbs
		.container
			ul.breadcrumbs__list
				- var items = ["Главная", "Каталог"]
					each item, index in items
						li(class="breadcrumbs__item breadcrumbs__item_" + ((item == "Каталог") ? 'active' : ''))
							a(href="#").breadcrumbs__link= item
							if index != items.length-1
								span.breadcrumbs__pipe   >  
	.content-wrapper
		.container
			.main-title Каталог
			.main-content

				include ../common/_sidebar

				.content
					.sort
						.sort__left
							.sort__title Сортировать по:
							ul.sort__list
								- var items = ['Цене', 'Популярности', 'Названию']
								each item in items
									li.sort__item
										a(href="#").sort__link
											span.sort__text= item
											i.icon.icon-red-arrow-down
						.sort__right
							.sort__title Показывать по:
							ul.sort__list
								- var items = [20, 40, 60, 80]
								each item in items
									li.sort__item
										a(href="#" class="sort__link" + ((item == 20) ? ' sort__link_active' : ''))
											span.sort__amount= item
							.sort__view
								ul.sort__view-list
									- var items = ['thumb', 'list']
									each item in items
										li(class="sort__view-item sort__view-" + item data-view= item)
											a(href="#" class="sort__view-link" + ((item == 'thumb') ? ' sort__view-link_active' : ''))
												i(class="icon icon-view-" + item)
					.products
						ul.products__list
							- for (var i = 0; i < 20; i++)
								li.products__item
									a(href="product.html").products__link
										.products__item-inner
											.products__img-wrapper
												img(src="assets/img/product.jpg").products__img
											.products__brand Jour D'hermes
											.products__name Kelly Calèche
											.products__price 1 680 
												span.products__price-currency руб.
											button(type="button").products__button В корзину
					.pagination
						ul.pagination__list
							- for (var i = 1; i < 7; i++)
								li.pagination__item
									a(href="#" class="pagination__link" + ((i == 4) ? ' pagination__link_active' : ''))
										.pagination__mark= i
							li.pagination__item.pagination__item_next
								a(href="#").pagination__link
									span.pagination__mark_text Следующая
									i.icon.icon-arrow-down

			include ../common/_aboutcompany
			include ../common/_articles
			include ../common/_subscribe